{
    "compilerOptions": {
        "strict": true,
        "outDir": "esm",
        "target": "es2020",
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true, // for BN.js
        "sourceMap": true,
        "inlineSources": false,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "declaration": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "lib",
    ],
}
